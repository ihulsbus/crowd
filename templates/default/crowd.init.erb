#!/bin/bash
# CROWD startup script
# Adapted from: http://confluence.atlassian.com/display/JIRA/Starting+JIRA+Automatically+on+Linux
# Dynamically generated by Chef on <%= node["fqdn"] %>
# Local modifications will be overwritten by Chef.
#chkconfig: 2345 80 05
#description: Atlassian CROWD

### BEGIN INIT INFO
# Provides:          crowd
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop Atlassian CROWD standalone server
### END INIT INFO

# Source function library.
<% case node['platform_family'] -%>
<% when 'rhel' -%>
. /etc/rc.d/init.d/functions
<% else -%>
. /lib/lsb/init-functions
<% end -%>

# CROWD Linux service controller script
APP=CROWD
# Name of the user to run as
USER=<%= node['crowd']['user'] %>
BASE=<%= node['crowd']['install_path'] %>/crowd

function start {
    echo "Starting $APP"
    su -l $USER -c $BASE/start_crowd.sh
    return $?
  }

function stop {
    echo "Stopping $APP"
    su -l $USER -c $BASE/stop_crowd.sh
    return $?
}

case "$1" in
    start)
        start
        RETVAL=$?
        ;;
    stop)
        stop
        RETVAL=$?
        ;;
    restart)
        stop
        start
        RETVAL=$?
        ;;
    status)
        <% case node['platform_family'] -%>
        <% when 'rhel' -%>
        status -p $BASE/apache-tomcat/work/catalina.pid $APP
        <% else -%>
        status_of_proc -p $BASE/apache-tomcat/work/catalina.pid $JAVA_HOME/bin/java $APP
        <% end -%>
        RETVAL=$?
        ;;
    *)
        echo "Usage: $0 {start|restart|stop|status}"
        RETVAL=2
        ;;
esac

exit $RETVAL
